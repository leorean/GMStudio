//MAXED OUT achievement!!
var up;up = 0;
for (i = 0; i &lt; UPGRADE.SIZE; i++)
{
    var up1,up2;
    up1 = real(global.upgrade[i,UPGRADE.TIER]);
    up2 = array_length_1d(global.upgrade[i,UPGRADE.PRICE]);
    if (up1 == up2)
        up++;
}
if (up == UPGRADE.SIZE)
    postAchievement("CgkIsq60qNAMEAIQEg",100,false);

if (btn[0].pressed)
{
    if (itemFocus != -1)
    {
        if (item[itemFocus].tier &lt; item[itemFocus].maxTier)
        {
            if (itemLocked)
                itemDescription = "You can't buy this at the moment.";
            else if (real(itemPrice) &lt;= global.wallet) //THIS IS WHERE THE MAGIC HAPPENS
            {
                var t;
                if (item[itemFocus].tier == 0) //unlocking effect
                {
                    t = instance_create(item[itemFocus].x,item[itemFocus].y,objEffectDust);t.depth=item[itemFocus].depth-1;
                    t = instance_create(item[itemFocus].x+TILE,item[itemFocus].y,objEffectDust);t.depth=item[itemFocus].depth-1;
                    t = instance_create(item[itemFocus].x,item[itemFocus].y+TILE,objEffectDust);t.depth=item[itemFocus].depth-1;
                    t = instance_create(item[itemFocus].x+TILE,item[itemFocus].y+TILE,objEffectDust);t.depth=item[itemFocus].depth-1;
                    t = instance_create(item[itemFocus].x+.5*TILE,item[itemFocus].y+.5*TILE,objEffectDust);t.depth=item[itemFocus].depth-1;
                }
                t = instance_create(WIDTH/2,TILE,objText);
                t.text = "-"+string(itemPrice);
                t.yVel = -1;
                t.yGrav = .1;
                t.colorBack = c_none;
                t.fnt = fntNumbers;
                t.depth = MOUSEDEPTH+1;
                
                global.wallet -= real(itemPrice);
                item[itemFocus].tier = min(item[itemFocus].tier + 1, item[itemFocus].maxTier);
                
                global.upgrade[item[itemFocus].index,UPGRADE.TIER]+=1; //save global upgrade.
                
                //Woah I'm Powerful Achievement
                if (global.upgrade[UPGRADE.upSuperDash,UPGRADE.TIER]&gt; 0)
                    postAchievement("CgkIsq60qNAMEAIQCw",100,false);
                
                unlockUpgrades();
                playSound(sfxBuy,1);
                
                itemDescription = "Thank you!";
            } else
                itemDescription = "Not enough coins!";
        } else
            itemDescription = "Already at MAX level.";
        //TODO: SAVE THE PURCHASE
    }
    descriptionTimer = 1.5*FPS;
}

if (mouse_check_button_released(mb_left) &amp;&amp; !btn[0].active)
{
    i = instance_place(mouse_x,mouse_y,objShopItem);
    if (instance_exists(i))
    {
        itemFocus = i.index;
        descriptionTimer = 0;
    } else
        if (!btn[0].pressed) //only release focus when clicking elsewhere.
            itemFocus = -1;
    i = noone;  
}

if (itemFocus != -1)
{
    itemPrice = item[itemFocus].price[item[itemFocus].tier];
    itemLocked = item[itemFocus].locked;
    if (!itemLocked)
    {
        itemName = string(item[itemFocus].name) + " (" + string(item[itemFocus].tier) + " / " + string(item[itemFocus].maxTier) + ")";
        if (!descriptionTimer) itemDescription = item[itemFocus].description;
    } else
    {
        itemName = "&lt;locked&gt;";
        if (!descriptionTimer) itemDescription = item[itemFocus].unlockText;
    }    
}
else
{
    itemPrice = "---";
    itemName = "";
    itemDescription = "Select what you want to buy.";
}

descriptionTimer = max(descriptionTimer -1,0);

if (btn[1].pressed || keyboard_check_pressed(vk_space) || (itemFocus == -1 &amp;&amp; keyboard_check_pressed(vk_enter))) //PLAY
{
    saveProgress();
    loadProgress();

    instance_activate_object(objControl);
    room_goto(MAIN);
}
if (btn[2].pressed || keyboard_check_pressed(vk_escape))
{
    instance_activate_object(objControl);
    room_goto(INIT);
}

if (btn[3].pressed)
{
    instance_activate_object(objControl);
    room_goto(PREMIUM);
}

if (debug_mode)
{
    if (keyboard_check_pressed(ord('R')))
    {
        deleteProgress();
        saveProgress();
        loadProgress();
    }
    if (keyboard_check(ord('T')))
        global.wallet += 1000;        
}
