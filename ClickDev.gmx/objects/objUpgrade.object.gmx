}
//draw_text(x+2*TILE+2,y+1,string(name));

//++++price++++

draw_set_font(global.fntDefault);
draw_set_halign(fa_right);
draw_text(x+10*TILE-2,y+2*TILE-1,"" + string(bigNumber(levelPrice))+"@ ");

//+++cps+++++
