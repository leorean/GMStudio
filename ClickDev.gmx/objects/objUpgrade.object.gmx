draw_set_halign(fa_right);
var cpsl = cps*(level+1);
if (cpsl&gt;1000) cpsl = bigNumber(cpsl);
draw_text(x+10*TILE,y+2*TILE-1," @ " + string(cpsl) + "/sec. ");
*/

//++++TOOLTIP++++
if (pressed)// &amp;&amp; mouse_check_button(mb_left))
{
    var wx = TILE;//clamp(mouse_x-6.5*TILE,0,WIDTH-13*TILE);
    var wy = y-7.5*TILE;//clamp(mouse_y-8*TILE,y-7*TILE,y);
    
    draw_sprite_part_ext(sprGfx,-1,WIDTH,5*TILE,13*TILE,8*TILE,wx,wy,1,1,c_white,1);
    draw_set_alpha(1);
    
    draw_set_font(global.fntDefault);
    draw_set_color(make_color_rgb(115,131,168));
    
    //if (!canBuy) draw_set_color(cNormal0) else draw_set_color(cNormal1);
    draw_set_halign(fa_right);
    draw_text(wx+13*TILE-8,wy+4,string(bigNumber(levelPrice))+"@");
    
    
    draw_set_halign(fa_left);
    draw_set_valign(fa_top);
    
    //++++name++++
    //var n = "???";
    //if (level &gt; 0) n = name;
    draw_text(wx+8,wy+4,""+string(name));
    
    //++++description++++
    draw_set_halign(fa_left);
    draw_text_ext(wx+8,wy+2*TILE+4,""+string(desc),TILE,12*TILE);
    
    draw_set_halign(fa_right);
    //++++lv++++
    //draw_text(wx+13*TILE,wy+TILE+4," Lv. "+string(level)+" ");
    
