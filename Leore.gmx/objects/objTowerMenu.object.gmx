cursor = 0;
maxCursor = 3;

target = noone; //the tower that exists at the players position
price = 0;
sellPrice = 0;

keyboard_clear(vk_up);
keyboard_clear(vk_down);
keyboard_clear(vk_left);
keyboard_clear(vk_right);

keyU = false;
keyD = false;
keyL = false;
keyR = false;

x = floor(view_xview[0]);
y = floor(view_yview[0]);

with(global.player)
    phy_active = false;
