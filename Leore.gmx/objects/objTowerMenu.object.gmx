        <relative>0</relative>
        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>global.hasControl = false;

draw_set_halign(fa_center);
draw_set_valign(fa_top);
draw_set_alpha(1);


//arrows
if (!instance_exists(target))
{
    draw_sprite_part(global.sprHud,-1,2*TILE,(keyL*2*TILE),2*TILE,2*TILE,x + WIDTH/2 - 5*TILE,y + 4*TILE);
    draw_sprite_part(global.sprHud,-1,4*TILE,(keyR*2*TILE),2*TILE,2*TILE,x + WIDTH/2 + 3*TILE,y + 4*TILE);
}

//buy/upgrade
if (!instance_exists(target)) actionText = "Create for $" + string(price);
else if (target.level &lt; global.tower[cursor,T.MAXLVL]) actionText = "Upgrade for $" + string(price);

if (price &gt; global.wallet)
    c = c_red;
else
    c = c_white;

if ((!instance_exists(target) &amp;&amp; global.wallet &lt;= price) || (target.level &lt; global.tower[cursor,T.MAXLVL]))
{
    drawText(x + WIDTH/2,y + 1.5*TILE,actionText,c,c_black,fntDefault);
    draw_sprite_part(global.sprHud,-1,6*TILE,(keyU*2*TILE),2*TILE,2*TILE,x + WIDTH/2 - 1*TILE,y + 2*TILE);
}

//sell
if (instance_exists(target))
{
    drawText(x + WIDTH/2,y + 7.5*TILE,"Sell for $" + string(sellPrice),c_white,c_black,fntDefault);
    draw_sprite_part(global.sprHud,-1,8*TILE,(keyD*2*TILE),2*TILE,2*TILE,x + WIDTH/2 - 1*TILE,y + 6*TILE);
    
    draw_sprite_part(global.sprHud,-1,0,0,2*TILE,2*TILE,target.x -TILE, target.y -TILE);
}

//cursor
draw_sprite_part(global.sprHud,-1,0,0,2*TILE,2*TILE,x + WIDTH/2 - 1*TILE,y + 4*TILE);

draw_sprite_part(global.sprHud,-1, ((cursor + maxCursor) % (maxCursor + 1)) *2*TILE,4*TILE,2*TILE,2*TILE,x + WIDTH/2 - 3*TILE,y + 4*TILE);
draw_sprite_part(global.sprHud,-1,cursor*2*TILE,4*TILE,2*TILE,2*TILE,x + WIDTH/2 - 1*TILE,y + 4*TILE);
draw_sprite_part(global.sprHud,-1,((cursor + 1) % (maxCursor + 1))*2*TILE,4*TILE,2*TILE,2*TILE,x + WIDTH/2 + 1*TILE,y + 4*TILE);

