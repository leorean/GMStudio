        <arguments>
          <argument>
            <kind>1</kind>
            <string>//handleButtons();

if (mouse_check_button_released(mb_left))
{
    i = instance_place(mouse_x,mouse_y,objShopItem);
    if (instance_exists(i))
    {
        itemFocus = i.index;
        itemLocked = i.locked;
        description = i.description;
    } else
        if (!btn[0].pressed) //only release focus when clicking elsewhere.
            itemFocus = -1;
    i = noone;  
}

if (itemFocus != -1)
    itemPrice = item[itemFocus].price[item[itemFocus].tier];
else
    itemPrice = "---";

descriptionTimer = max(descriptionTimer -1,0);
if (!descriptionTimer)
{
    if (itemFocus == -1)
        description = "";
    else
        description = item[itemFocus].description;
}

if (btn[0].pressed)
{
    if (itemFocus != -1 &amp;&amp; item[itemFocus].tier &lt; item[itemFocus].maxTier)
    {
        if (itemLocked)
            description = "This item is locked.";
        else if (real(itemPrice) &lt;= global.wallet) //THIS IS WHERE THE MAGIC HAPPENS
        {
            
            t = instance_create(WIDTH/2,TILE,objText);
            t.text = "-"+string(itemPrice);
            t.yVel = -1;
            t.yGrav = .1;
        
            global.wallet -= real(itemPrice);
            //itemPrice = item[itemFocus].price[item[itemFocus].tier];
            item[itemFocus].tier = min(item[itemFocus].tier + 1, item[itemFocus].maxTier);
            description = "Thank you for your purchase!";
        } else
            description = "You can't afford that.";
        descriptionTimer = 3*FPS;
    }
}

if (btn[1].pressed)
{
    instance_activate_object(objControl);
    room_goto(MAIN);
}
if (btn[2].pressed)
{
    instance_activate_object(objControl);
    room_goto(INIT);
}

