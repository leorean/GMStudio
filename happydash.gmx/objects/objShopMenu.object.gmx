            <kind>1</kind>
            <string>if (room != SHOP) instance_destroy();

if (mouse_check_button_released(mb_left))
{
    i = instance_place(mouse_x,mouse_y,objShopItem);
    if (instance_exists(i))
    {
        itemFocus = i.index;
        descriptionTimer = 0;
    } else
        if (!btn[0].pressed) //only release focus when clicking elsewhere.
            itemFocus = -1;
    i = noone;  
}

if (itemFocus != -1)
{
    itemPrice = item[itemFocus].price[item[itemFocus].tier];
    if (!item[itemFocus].locked)
        suffix = " (Level " + string(item[itemFocus].tier) + " / " + string(item[itemFocus].maxTier) + ")";
    else
        suffix = " &lt;locked&gt;";
    itemName = string(item[itemFocus].name) + suffix;
    itemLocked = item[itemFocus].locked;
    if (!descriptionTimer)
        itemDescription = item[itemFocus].description;    
}
else
{
    itemPrice = "---";
    itemName = "";
    itemDescription = "";
}

descriptionTimer = max(descriptionTimer -1,0);

if (btn[0].pressed)
{
    if (itemFocus != -1)
    {
        if (item[itemFocus].tier &lt; item[itemFocus].maxTier)
        {
            if (itemLocked)
                itemDescription = "This item is currently unavailable.";
            else if (real(itemPrice) &lt;= global.wallet) //THIS IS WHERE THE MAGIC HAPPENS
            {
                var t;
                if (item[itemFocus].tier == 0) //unlocking effect
                {
                    t = instance_create(item[itemFocus].x,item[itemFocus].y,objEffectDust);t.depth=item[itemFocus].depth-1;
                    t = instance_create(item[itemFocus].x+TILE,item[itemFocus].y,objEffectDust);t.depth=item[itemFocus].depth-1;
                    t = instance_create(item[itemFocus].x,item[itemFocus].y+TILE,objEffectDust);t.depth=item[itemFocus].depth-1;
                    t = instance_create(item[itemFocus].x+TILE,item[itemFocus].y+TILE,objEffectDust);t.depth=item[itemFocus].depth-1;
                    t = instance_create(item[itemFocus].x+.5*TILE,item[itemFocus].y+.5*TILE,objEffectDust);t.depth=item[itemFocus].depth-1;
                }
                t = instance_create(WIDTH/2,TILE,objText);
                t.text = "-"+string(itemPrice);
                t.yVel = -1;
                t.yGrav = .1;
                t.fnt = fntScoreSmall;
            
                global.wallet -= real(itemPrice);
                //itemPrice = item[itemFocus].price[item[itemFocus].tier];
                item[itemFocus].tier = min(item[itemFocus].tier + 1, item[itemFocus].maxTier);
                itemDescription = "Thank you!";
            } else
                itemDescription = "You can't afford that. Earn more coins!";
        } else
            itemDescription = "Already at MAX level.";
        //TODO: SAVE THE PURCHASE
    }
    descriptionTimer = 1.5*FPS;
}

if (btn[1].pressed)
{
    instance_activate_object(objControl);
    room_goto(MAIN);
}
if (btn[2].pressed)
{
    instance_activate_object(objControl);
    room_goto(INIT);
}
