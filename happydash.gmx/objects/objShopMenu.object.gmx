var c1,c2;
if (itemFocus != -1)
{
    var c1,c2;
    
    if (itemLocked)
        {c1 = c_gray; c2 = c_none}
    else if (real(itemPrice) &lt;= global.wallet)
        {c1 = c_white;c2 = c_black}
    else
        {c1 = c_red;c2 = c_none}
}
else {c1 = c_white; c2 = c_black};

drawText(WIDTH-.5*TILE,HEIGHT-4*TILE,string(itemPrice),c1,c2,fntShopSmall);


